<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Account Management Styles -->
    <style name="AccountManagementHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AccountManagementSecondaryHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="AccountManagementHelperText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountManagementButtons">
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AccountManagementEditText">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <!-- End Account Management Styles -->

    <!-- Weight Entry Style -->
    <style name="WeightEntry">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WeightEntryHelperText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@color/colorNavigationUnselected</item>
    </style>

    <style name="RecyclerVertDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@color/colorRecyclerDivider</item>
    </style>

    <style name="BackChevron">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>




</resources>
