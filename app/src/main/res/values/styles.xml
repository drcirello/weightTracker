<resources>

    <!-- Themes -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorMainBackground</item>
        <item name="android:colorBackground">@color/colorMainBackground</item>
    </style>


    <style name="TitleBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorTitleBar</item>
        <item name="android:textColorPrimary">@color/colorTitleBarText</item>
    </style>

    <!-- Account Management Styles -->
    <style name="AccountManagementHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AccountManagementSecondaryHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="AccountManagementHelperText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountManagementBlurbText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="AccountManagementButtons">
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountManagementEditText">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    <!-- End Account Management Styles -->

    <!-- Weight Entry Style -->
    <style name="WeightEntry">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorEntryPrimaryText</item>
    </style>

    <style name="WeightEntryHelperText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@color/colorNavigationUnselected</item>
    </style>

    <style name="RecyclerVertDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@color/colorRecyclerDivider</item>
    </style>

    <!-- Charts Page -->
    <style name="CurrentWeight">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="CurrentWeightTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">-5dp</item>
    </style>

    <style name="StatsText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>


    <style name="SettingsOptionsHeaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SettingsOptionsSelectedText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorEntryPrimaryText</item>
        <item name="android:popupBackground">@color/colorTitleBar</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BackChevron">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="ChartsLoadingFailed">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <style name="EntryStyle">
        <item name="android:background">@color/colorTitleBar</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarViewCustomStyle">
        <item name="android:background">@color/colorMainBackground</item>
        <item name="calendar_date_background">@drawable/custom_date_bg_selector</item>
        <item name="calendar_date_text_color">@color/custom_date_text_selector</item>
        <item name="calendar_month_text_color">@color/colorTitleBarText</item>
        <item name="calendar_day_bar_background">@color/colorWeekdayBar</item>
        <item name="calendar_day_bar_text_color">@color/colorWhiteText</item>
        <item name="calendar_grid_color">@color/colorMainBackground</item>
        <item name="calendar_grid_on_selected_dates">false</item>
    </style>

    <style name="EnterWeightVertDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/colorRecyclerDivider</item>
    </style>

    <style name="AppTheme.DeleteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#990000</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubmitButtonAccent" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorCalendarSubmitButtonEnabled</item>
        <item name="colorButtonNormal">@color/colorCalendarSubmitButtonDisabled</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EnterWeightTextStyle">
        <item name="android:background">@color/colorTitleBar</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EnterWeightViewStyle">
        <item name="android:background">@color/colorTitleBar</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EnterWeightEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="RecyclerEmptyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ChartsNoDataText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/chartsNoDataText</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChartsTitleBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/chartsTitleText</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/colorMainBackground</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
