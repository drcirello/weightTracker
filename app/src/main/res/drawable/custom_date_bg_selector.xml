<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorEntrySecondaryText"/>
            <size android:height="5dp" />
        </shape>
    </item>

    <item app:calendar_state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorCalendarMonth"/>
            <size android:height="5dp" />
        </shape>
    </item>

    <item app:calendar_state_today="true">
        <color android:color="@color/colorMainBackground" />
    </item>

    <item app:calendar_state_disabled="true">
        <color android:color="@color/colorMainBackground" />
    </item>

    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorCalendarMonth"/>
            <size android:height="5dp" />
        </shape>
    </item>

    <item app:calendar_state_weekend="true">
        <color android:color="@color/colorMainBackground" />
    </item>

    <item>
        <color android:color="@color/colorMainBackground" />
    </item>

</selector>