<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rangeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                style="@style/SettingsOptionsHeaderText"
                android:text="@string/settings_chart_range"/>
            <Spinner
                android:id="@+id/selectedRange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/SettingsOptionsSelectedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/changeTime1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                style="@style/SettingsOptionsHeaderText"
                android:text="@string/settings_chart_change_one"/>
            <Spinner
                android:id="@+id/selectedChangeTime1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/SettingsOptionsSelectedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/changeTime2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                style="@style/SettingsOptionsHeaderText"
                android:text="@string/settings_chart_change_two"/>
            <Spinner
                android:id="@+id/selectedChangeTime2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/SettingsOptionsSelectedText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/SettingsOptionsHeaderText"
                android:text="@string/settings_logout"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>