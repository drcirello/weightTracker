<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorMainBackground">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/entries_date_response"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                style="@style/WeightEntry"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WeightEntry"
                    android:text="@string/entries_weight"/>
                <TextView
                    android:id="@+id/entries_weight_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/WeightEntry"/>
            </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/vertical_separator"
        android:layout_height="match_parent"
        style="@style/RecyclerVertDivider"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"/>

    <android.widget.Button
        android:id="@+id/entries_delete_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.DeleteButton"
        android:text="@string/entries_delete_button"/>

</LinearLayout>