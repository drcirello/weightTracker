<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/secondary_wallpaper" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/secondary_wallpaper">

        <Button
            android:id="@+id/reset_password_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />
        <TextView
            android:text="@string/reset_password_title"
            style="@style/AccountManagementHeaderText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            style="@style/AccountManagementSecondaryHeaderText" />
        <EditText
            android:id="@+id/reset_password_useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/account_management_edittext"
            style="@style/AccountManagementEditText" />

        <Button
            android:id="@+id/send_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_password_reset"
            android:background="@drawable/rounded_button"
            style="@style/AccountManagementButtons" />

    </LinearLayout>
</FrameLayout>